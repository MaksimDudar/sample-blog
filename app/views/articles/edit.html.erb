<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3>Edit Article</h3>

      <%= form_for :article, url: article_path(@article), method: :patch do |f| %>
        <p>
          <%= f.label :title, class:"fw-semibold" %><br />
          <%= f.text_field :title %>
        </p>

        <p>
          <%= f.label :text, class:"fw-semibold" %><br />
          <%= f.text_area :text %>
        </p>

        <p>
          <%= f.submit class:"btn btn-outline-warning" %>
        </p>

      <% end %>
    </div>
  </div>
</div>
