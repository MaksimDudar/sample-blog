<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1><%= t("articles.articles")%></h1>

      <p><%= link_to 'New article', article_path([:new]) %></p>
      <p><%= link_to 'Main menu', home_index_path([:index]) %></p>

      <hr />
      <hr />

      <% @articles.each do |article| %>
      <h3>
        <%= article.title %>
      </h3>
      <p>
        <%= article.text %>
      </p>
       <p>
        <%= link_to 'Show', article_path(article), class:"link-warning" %> ||
        <%= link_to 'Edit', edit_article_path(article), class:"link-warning" %>
        <%= button_to 'Delete', article_path(article), method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}}, class:"btn btn-outline-danger" %>

        </p>
        <hr />
       <% end %>
       <!-- <a href="/articles">Show all articles</a> -->

    </div>
  </div>
</div>
